<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

    <title>Admin Page</title>
</head>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<body>


    <header>
        <div class="container-fluid bg-primary-site-darker">
            <div class="py-2 row">
                <div class="col-md">
                    <ul class="nav d-flex m-0 justify-content-center justify-content-md-start">
                        <li class="nav-item">
                            <a href="/admin" class="nav-link" style="color:#FFFFFF;">Employee Info</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/leave" class="nav-link" style="color:#FFFFFF;">Approve Leaves</a>
                        </li>
                        <li class="nav-item">
                            <a href="/register" class="nav-link" style="color:#FFFFFF;">Register Employee</a>
                        </li>
                        <li class="nav-item">
                            <a href="/report" class="nav-link" style="color:#FFFFFF;">Report</a>
                        </li>
                        <li class="nav-item">
                            <a href="/adminLogout" class="nav-link" style="color:#FFFFFF;">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <style>
        #btn {
            background-color: #4CAF50;
            padding: 15px;
            color: white;
            border: none;
            border-radius: 10px;
            margin-left: 48%;
            margin-top: 25px;
            margin-bottom: 25px;
        }
    </style>
    <button id="btn">
        Print
    </button>
    <div id="printcontainer">
        <table class="content-table">
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email id</th>
                <th>Leave Type</th>
                <th>Status</th>
                <th>Recommended By</th>
                <th>Date</th>
            </tr>

            <% var i=1 %>

                <% leaves.forEach((e)=> { %>
                    <tr class="table-row">
                        <td>
                            <%= e.name %>
                        </td>
                        <td>
                            <%= e.mobile %>
                        </td>
                        <td>
                            <%= e.email %>
                        </td>
                        <td>
                            <%= e.leaveType %>
                        </td>
                        <td>
                            <%= e.status %>
                        </td>
                        <% if(e.recommendedBy){ %>
                            <td>
                                <%= e.recommendedBy %>
                            </td>
                            <% } else{ %>
                                <td>none</td>
                                <% } %>

                                    <% if(e.status=="approved" ){ %>



                                        <td>
                                            <% for(var j=1; j<11; j++) {%>

                                                <%= JSON.stringify(e.startTime)[j]%>

                                                    <% } %>

                                                        /

                                                        <% for(var j=1; j<11; j++) {%>

                                                            <%= JSON.stringify(e.endTime)[j]%>

                                                                <% } %>

                                        </td>
                                        <% } else{ %>
                                            <td>none</td>
                                            <% } %>


                                                <% i=i+1 %>
                    </tr>
                    <% }) %>


        </table>
    </div>

</body>

<script>
    const btn = document.getElementById("btn");
    btn.addEventListener("click", () => {
        print()
    });


</script>

</html>
